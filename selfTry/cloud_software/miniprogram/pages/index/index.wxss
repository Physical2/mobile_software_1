/* 给 movable-area 设置高度和边界 */
.sortable-list {
  height: 200px;
  width: 100%;
  border: 1px solid rgb(22, 17, 17);
  position: relative;
}

/* 给 movable-view 设置固定高度和间距，避免相互覆盖 */
.sortable-item {
  height: 50px;
  line-height: 50px;
  width: 100%;
  border-bottom: 1px solid rgb(221, 194, 38);
  background-color: #b11616;
  text-align: center;
}


.color-picker {
  padding: 20px;
}

.color-sample {
  width: 50px;
  height: 50px;
  border: 1px solid #000;
  cursor: pointer;
}

.color-options {
  display: flex;
  flex-wrap: wrap;
}

.color-option {
  width: 50px;
  height: 50px;
  border: 1px solid #000;
  margin: 5px;
  cursor: pointer;
}


